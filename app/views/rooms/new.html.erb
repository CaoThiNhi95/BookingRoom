<div class="panel panel-default">
  <div class="panel-heading">
    Create your beautiful place
  </div>
  <div class="panel-body">
    <div class="container">
      <%= form_for @room do |f| %>
      <div class="row">
        <div class="col-md-4 select">
          <div class="form-group">
            <lable>Home Type</lable>
            <%= f.select :home_type, [["Apartment", "Apartment"], ["House", "House"], ["Bed & Breakfast", "Bed & Breakfast"]],
                          id: "home_type", prompt: "Select...", class: "form-control" %>
          </div>
        </div>

        <div class="col-md-4 select">
          <div class="form-group">
            <lable>Room Type</lable>
            <%= f.select :room_type, [["Entire", "Entire"], ["Private", "Private"], ["Shared", "Shared"]],
                          id: "room_type", prompt: "Select...", class: "form-control" %>
          </div>
        </div>

        <div class="col-md-4 select">
          <div class="form-group">
            <lable>Booking Type</lable>
            <%= f.select :instant, Room.instants.map {|key, value| [key.humanize, key]}, selected: 'Instant',  prompt: "Select...", class: "form-control" %>
          </div>
        </div>

        <div class="col-md-4 select">
          <div class="form-group">
            <lable>Accommodate</lable>
            <%= f.select :accommodate, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                          id: "accommodate", prompt: "Select...", class: "form-control" %>
          </div>
        </div>

        <div class="col-md-4 select">
          <div class="form-group">
            <lable>Bedrooms</lable>
            <%= f.select :bed_room, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                          id: "bed_room", prompt: "Select...", class: "form-control" %>
          </div>
        </div>

        <div class="col-md-4 select">
          <div class="form-group">
            <lable>Bathrooms</lable>
            <%= f.select :bath_room, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                          id: "bath_room", prompt: "Select...", class: "form-control" %>
          </div>
        </div>

      </div>
      <div><%= f.submit "Create My Room", class: "btn btn-normal"%></div>
      <% end %>
    </div>
  </div>
</div>
